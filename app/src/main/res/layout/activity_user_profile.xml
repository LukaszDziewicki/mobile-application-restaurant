<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.user.UserProfileActivity"
    android:background="@drawable/background">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:gravity="top"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/houseTextView"
                android:layout_width="121dp"
                android:layout_height="39dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:text="@string/house"
                android:textAlignment="textStart"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/flatTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailTextView"
                app:layout_constraintVertical_bias="0.903" />

            <TextView
                android:id="@+id/flatTextView"
                android:layout_width="121dp"
                android:layout_height="39dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:text="@string/flat"
                android:textAlignment="textStart"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/postalCodeTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailTextView"
                app:layout_constraintVertical_bias="0.876" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="135dp"
                android:layout_marginTop="25dp"
                android:layout_height="128dp"
                android:background="@drawable/ic_account_xxl"
                android:contentDescription="@string/logo"
                app:layout_constraintBottom_toTopOf="@+id/emailTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="402dp"
                android:layout_height="35dp"
                android:layout_marginTop="150dp"
                android:fontFamily="serif-monospace"
                android:gravity="top"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="10pt"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/streetTextView"
                android:layout_width="121dp"
                android:layout_height="39dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:text="@string/street"
                android:textAlignment="textStart"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/houseTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailTextView"
                app:layout_constraintVertical_bias="0.6" />

            <TextView
                android:id="@+id/postalCodeTextView"
                android:layout_width="121dp"
                android:layout_height="39dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:text="@string/postal_code"
                android:textAlignment="textStart"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/cityTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailTextView"
                app:layout_constraintVertical_bias="0.903" />

            <TextView
                android:id="@+id/cityTextView"
                android:layout_width="121dp"
                android:layout_height="39dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:text="@string/city"
                android:textAlignment="textStart"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailTextView"
                app:layout_constraintVertical_bias="0.57" />

            <EditText
                android:id="@+id/houseText"
                android:layout_width="120dp"
                android:layout_height="43dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="128dp"
                android:autofillHints=""
                android:background="@drawable/shape"
                android:hint="@string/house"
                android:inputType="number"
                android:paddingStart="10dp"
                android:textColorLink="#00FFFFFF"
                app:layout_constraintBottom_toTopOf="@+id/flatText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailTextView"
                app:layout_constraintVertical_bias="0.899" />

            <EditText
                android:id="@+id/streetText"
                android:layout_width="240dp"
                android:layout_height="43dp"
                android:layout_marginEnd="8dp"
                android:autofillHints=""
                android:background="@drawable/shape"
                android:hint="@string/street"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textColorLink="#00FFFFFF"
                app:layout_constraintBottom_toTopOf="@+id/houseText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailTextView"
                app:layout_constraintVertical_bias="0.774" />

            <EditText
                android:id="@+id/postalCodeText"
                android:layout_width="150dp"
                android:layout_height="43dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="96dp"
                android:autofillHints=""
                android:background="@drawable/shape"
                android:hint="@string/postal_code"
                android:inputType="textPostalAddress"
                android:paddingStart="10dp"
                android:textColorLink="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailTextView"
                app:layout_constraintVertical_bias="0.442" />

            <EditText
                android:id="@+id/flatText"
                android:layout_width="120dp"
                android:layout_height="43dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="128dp"
                android:autofillHints=""
                android:background="@drawable/shape"
                android:hint="@string/flat"
                android:inputType="number"
                android:paddingStart="10dp"
                android:textColorLink="#00FFFFFF"
                app:layout_constraintBottom_toTopOf="@+id/postalCodeText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailTextView"
                app:layout_constraintVertical_bias="0.901" />

            <EditText
                android:id="@+id/cityText"
                android:layout_width="150dp"
                android:layout_height="43dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="96dp"
                android:autofillHints=""
                android:background="@drawable/shape"
                android:hint="@string/city"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textColorLink="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailTextView"
                app:layout_constraintVertical_bias="0.555" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="221dp"
                android:layout_height="42dp"

                android:layout_marginBottom="144dp"
                android:background="@drawable/shape_login"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cityText"
                app:layout_constraintVertical_bias="1.0" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="76dp"
                android:layout_height="71dp"
                android:layout_marginBottom="56dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerButton" />

            <Button
                android:id="@+id/backButton"
                android:layout_width="90dp"
                android:layout_height="37dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_login"
                android:text="@string/back"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/streetTextView"
                app:layout_constraintEnd_toStartOf="@+id/imageView2"
                app:layout_constraintHorizontal_bias="0.333"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.059" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>